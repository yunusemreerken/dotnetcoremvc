@model IEnumerable<first_project.Models.Applicationtype>


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">
                Application Type List

            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Applicationtype" asp-action="create" class="btn btn-primary"> Create a New Application Type</a>
        </div>

    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Application type name</th>
                    <th>Edit &Delete  </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td>
                            <a asp-controller="Applicationtype" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Applicationtype" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>

                        </td>


                    </tr>
                }
            </tbody>

        </table>
    }
    else

    {
        <p>No Application type  exist!</p>
    }
</div>                      
