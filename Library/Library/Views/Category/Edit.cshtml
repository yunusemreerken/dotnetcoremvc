@model Library.Data.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit Category</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Category", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.CategoryId, new { @class = "bmd-label-floating" })

                                @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.CategoryName, new { @class = "bmd-label-floating" })

                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="bmd-label-floating">Category Description</label>
                                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="bmd-label-floating">Status</label>
                                @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                            </div>
                        </div>
                        
                    </div>
                    
                    

                    <button class="btn btn-primary pull-right">Update</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>
