@model Library.Data.Models.Message
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">Edit Category</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Update", "Message", FormMethod.Post))
                {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.MessageId, new { @class = "bmd-label-floating" })

                            @Html.TextBoxFor(x => x.MessageId, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Email, new { @class = "bmd-label-floating" })

                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Name, new { @class = "bmd-label-floating" })

                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="bmd-label-floating">Status</label>
                                @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="bmd-label-floating">Your Message</label>
                                @Html.TextAreaFor(x => x.YourMessage, new { @class = "form-control", @rows = "6" })
                            </div>
                        </div>
                        

                    </div>



                    <button class="btn btn-primary pull-right">Update</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>
