@model IEnumerable<Library.Data.Models.Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
    int x = 0;
}

@foreach (var item in Model)
{
    <div class="templatemo_product_box">
        <h1>@item.BookName  <span>(@item.Author)</span></h1>
        <img src="@item.CoverImage" alt="image" width="100" height="100" />
        <div class="product_info">
            <h2>@item.PublisherName</h2>
            <h3>@item.Price ₺</h3>
            <div class="buy_now_button"><a href="#"> Satın Al</a></div>
            <div class="detail_button"><a href="/Default/Detail/@item.BookId">Detay</a></div>
        </div>
        <div class="cleaner">&nbsp;</div>
    </div>
    x = x + 1;

    @if (x % 2 == 0)
    {
        <div class="cleaner_with_height">&nbsp;</div>

    }
    else
    {
        <div class="cleaner_with_width">&nbsp;</div>
    }


}