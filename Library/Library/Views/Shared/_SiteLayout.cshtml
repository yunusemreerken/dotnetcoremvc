            </div> <!-- end of content left -->

            <div id="templatemo_content_right">
                @RenderBody()


                <a href="#"><img src="~/book-store/images/templatemo_ads.jpg" alt="ads" /></a>
            </div> <!-- end of content right -->

            <div class="cleaner_with_height">&nbsp;</div>
        </div> <!-- end of content -->

        <div id="templatemo_footer">

            <a href="/Default">Ana Sayfa</a> | <a href="/Default/Search">Arama</a> | <a href="#">Yeni Kitaplar</a> | <a href="/Default/ContactMe">İletişim</a><br />
