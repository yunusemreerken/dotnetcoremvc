@model CoreDepartman.Models.Personel
@{
    ViewData["Title"] = "NewPersonel";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<br />
<h2>NewPersonel</h2>

<form class="form-group" method="post">

    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

    @Html.LabelFor(x => x.Surname)
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

    @Html.LabelFor(x => x.City)
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })

    @Html.LabelFor(x => x.DepartmanID)
    @Html.DropDownListFor(x => x.Departman.Id, (List<SelectListItem>)ViewBag.dgr, new {@class = "form-control" })

    <br />
    <button class="btn btn-primary">Personel Ekle</button>

</form>